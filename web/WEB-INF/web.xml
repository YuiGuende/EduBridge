<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.authentication.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>controller.authentication.SignupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCourse</servlet-name>
        <servlet-class>controller.course.AddCourseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewCourse</servlet-name>
        <servlet-class>controller.course.ViewCourseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TotalCoursesServlet</servlet-name>
        <servlet-class>controller.course.TotalCoursesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CourseInforServlet</servlet-name>
        
        <servlet-class>controller.instructor.CourseInforServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignupInstructorServlet</servlet-name>
        <servlet-class>controller.authentication.SignupInstructorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GoogleLoginServlet</servlet-name>
        <servlet-class>controller.authentication.socialLogin.GoogleLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FacebookLoginServlet</servlet-name>
        <servlet-class>controller.authentication.socialLogin.FacebookLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LinkedinLoginServlet</servlet-name>
        <servlet-class>controller.authentication.socialLogin.LinkedinLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InstructorDashboardServlet</servlet-name>
        <servlet-class>controller.instructor.InstructorDashboardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeLearnerServlet</servlet-name>
        <servlet-class>controller.homeLearner.HomeLearnerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.authentication.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCourse</servlet-name>
        <url-pattern>/add-course</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>home-learner</welcome-file>
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>ViewCourse</servlet-name>
        <url-pattern>/view-course</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TotalCoursesServlet</servlet-name>
        <url-pattern>/total-courses</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupInstructorServlet</servlet-name>
        <url-pattern>/signup-instructor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GoogleLoginServlet</servlet-name>
        <url-pattern>/login-google</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FacebookLoginServlet</servlet-name>
        <url-pattern>/login-facebook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LinkedinLoginServlet</servlet-name>
        <url-pattern>/login-linkedin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InstructorDashboardServlet</servlet-name>
        <url-pattern>/home-instructor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeLearnerServlet</servlet-name>
        <url-pattern>/home-learner</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>36000</session-timeout>
    </session-config>
</web-app>
